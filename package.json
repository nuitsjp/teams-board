{
  "name": "teams-board",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Teams Board — Teamsレポート集計ダッシュボード",
  "scripts": {
    "postinstall": "node scripts/postinstall-setup.mjs",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint .",
    "lint:text": "textlint \"**/*.md\"",
    "lint:text:fix": "textlint --fix \"**/*.md\"",
    "format": "prettier --write .",
    "mkdocs": "uv run mkdocs serve --livereload",
    "mkdocs:build": "uv run mkdocs build",
    "mkdocs:build:svg": "node scripts/mkdocs-svg.mjs",
    "mkdocs:pdf": "node scripts/mkdocs-pdf.mjs",
    "rulesync:generate": "rulesync generate --targets claudecode,codexcli,copilot --features rules,commands,skills",
    "rulesync:ignore": "rulesync gitignore",
    "rulesync:import": "rulesync import --targets claudecode --features rules,commands,skills"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^25.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "tailwindcss": "^4.1.18",
    "vite": "^6.4.1",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "textlint": "^14.4.0",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.4",
    "textlint-rule-preset-icsmedia": "github:ics-creative/textlint-rule-preset-icsmedia",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-japanese": "^10.0.3",
    "textlint-rule-preset-jtf-style": "^2.3.14",
    "textlint-rule-prh": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "papaparse": "^5.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "packageManager": "pnpm@10.27.0"
}
