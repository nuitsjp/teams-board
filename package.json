{
  "name": "teams-board",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Teams Board — Teamsレポート集計ダッシュボード",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint .",
    "format": "prettier --write .",
    "infra:deploy": "pwsh -ExecutionPolicy Bypass -File scripts/infra/Deploy-Infrastructure.ps1",
    "infra:publish": "pwsh -ExecutionPolicy Bypass -File scripts/infra/Deploy-StaticFiles.ps1",
    "infra:sas": "pwsh -ExecutionPolicy Bypass -File scripts/infra/New-SasToken.ps1",
    "infra:clear": "pwsh -ExecutionPolicy Bypass -File scripts/infra/Clear-Data.ps1",
    "infra:urls": "pwsh -ExecutionPolicy Bypass -File scripts/infra/Show-Urls.ps1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^25.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "tailwindcss": "^4.1.18",
    "vite": "^6.4.1",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "papaparse": "^5.5.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0"
  },
  "packageManager": "pnpm@10.29.1"
}
